    <!-- Invisible Buy Now -->
    <template id="buy_now_btn_inherit" inherit_id="website_sale.product_buy_now" name="Ask for Quote Buy Now Product">
        <xpath expr="//a[@id='buy_now']" position="attributes">
            <attribute name="t-if">(product.quote_products == false and product.list_price != 0.00) or (product.quote_products == false and product.is_extra_price == true)</attribute>
        </xpath>
    </template>

    
    <template id="quotation_proudct_add_cart_cart_inherit" inherit_id="website_sale.product" name="Ask for Quote Add to Cart">
        <xpath expr="//a[@id='add_to_cart']" position="attributes">
            <attribute name="t-if">(product.quote_products == false and product.list_price != 0.00) or (product.quote_products == false and product.is_extra_price == true)</attribute>
        </xpath>        
    </template>
    <template id="quotation_proudct_price_addcart_inherit" inherit_id="website_sale.products_item" name="Ask for Quote Product Price">
        <xpath expr="//div[hasclass('product_price')]" position="attributes">
            <attribute name="t-if">(product.quote_products == false and product.list_price != 0.00) or (product.quote_products == false and product.is_extra_price == true)</attribute>
        </xpath>
    </template>
    <template id="website_sales_template_product_price_inherit" inherit_id="website_sale.product_price" name="Ask for Quote Hide Product price">        
        <xpath expr="//div[hasclass('product_price','mt16')]" position="attributes">
            <attribute name="t-if">(product.quote_products == false and product.list_price != 0.00) or (product.quote_products == false and product.is_extra_price == true)</attribute>
        </xpath>
    </template>
    <template id="website_sale_product_qty_inherit" inherit_id="website_sale.product_quantity" name="Ask for Quote Quantity">
        <xpath expr="//div[hasclass('css_quantity','input-group')]" position="attributes">
            <attribute name="t-att-style">'display: none;' if product.quote_products or product.list_price == 0.00 or product.is_extra_price == false else ''</attribute>
        </xpath>
    </template>

    <template id="website_sales_template_proudcts_addcart_icon_inherit" inherit_id="website_sale.products_add_to_cart" name="Ask for Quote Product Add to Cart list">        
        <xpath expr="//t[@t-if='product_variant_id']/a" position="attributes">
            <attribute name="t-if">(product.quote_products == false and product.list_price != 0.00) or (product.quote_products == false and product.is_extra_price == true)</attribute>
        </xpath>
        <!-- <xpath expr="//t[@t-elif='product._is_add_to_cart_possible()']/a" position="attributes">
            <attribute name="t-if">product.quote_products == false</attribute>
        </xpath> -->
    </template>

    <!--    Comparision Page  -->    
    <template id="ask_for_quote_comparison_inherit" inherit_id="website_sale_comparison.product_compare" name="Ask for Quote Hide multi Product Comparision list">
        <xpath expr="//div[hasclass('product_summary')]/span" position="replace">
            <span t-if="product.quote_products == false and product.list_price != 0.00">
                <strong>Price:</strong>
                <del t-attf-class="text-danger mr8 {{'' if combination_info['has_discounted_price'] else 'd-none'}}" 
                style="white-space: nowrap;" 
                t-esc="combination_info['list_price']" 
                t-options="{'widget': 'monetary', 'display_currency': website.currency_id}" 
                />
            </span>
        </xpath>
        <xpath expr="//form/a[hasclass('a-submit')]" position="replace">
            <a role="button" t-if="product.quote_products == false and product.list_price != 0.00" class="btn btn-primary btn-block a-submit" href="#"><i class="fa fa-shopping-cart"></i>&amp;nbsp;Add to Cart</a>
        </xpath>
    </template>

    <template id="ask_for_quote_comparison_product_inherit" inherit_id="website_sale_comparison.product_product" name="Ask for Quote Hide multi Product Comparision price">
        <xpath expr="//div[hasclass('pl-2')]/h6/span" position="replace">
            <span t-if="(product.quote_products == false and product.list_price != 0.00) or (product.quote_products == false and product.is_extra_price == true)" t-esc="combination_info['price']" t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"></span>
        </xpath>
    </template>

    <!--  Wishlist page -->
    <template id="ask_for_quote_product_wishlist" inherit_id="website_sale_wishlist.product_wishlist" name="Wishlist Page Hide">
        <xpath expr="//td[3]//t[2]" position="attributes">
            <attribute name="t-if">(wish.product_id.quote_products == false and wish.product_id.list_price != 0.00) or (wish.product_id.quote_products == false and wish.product_id.is_extra_price == true)</attribute>            
        </xpath>

        <xpath expr="//button[hasclass('o_wish_add')]" position="attributes">
            <attribute name="t-if">(wish.product_id.quote_products == false and wish.product_id.list_price != 0.00) or (wish.product_id.quote_products == false and wish.product_id.is_extra_price == true)</attribute>            
        </xpath>
    </template>

    
